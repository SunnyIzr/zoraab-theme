    <li class='account-network-hat'>
        <a class='account-network-hat'>
          ACCOUNT <span class="caret"></span>
        </a>
    </li>
      {% else %}
    <li>
        <a href='/account/login'> LOG IN </a>
    </li>
      {% endif %}
    <li><a href='/cart' class="right-off-canvas-toggle" id="cart" > CART <span class='number cart-count'>(<span class="item-count">{{cart.item_count}}</span>)</span> {% include 'icon_cart' %} </a></li>
  </ul>
</div>
<div class='account-dropdown hidden-xs'>
  <div class='dropdown-greeting'>Hi {{ customer.first_name }} </div>
  <div class='dropdown-link'><a href='/account'>ACCOUNT</a></div>
  <div class='dropdown-link'><a href='/account/logout'>LOG OUT</a></div>
</div>