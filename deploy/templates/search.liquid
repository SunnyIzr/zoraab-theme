
  {% if search.performed %}
    {% paginate search.results by 60 %}
    <h4 class="majortitle">You searched for: <strong>{{search.terms | escape}}</strong></h4>
    <h6>We found {{ paginate.items }} {{ paginate.items | pluralize: 'result','results' }}</h6>    
    {% if search.results_count == 0 %}  
    
    <p>Your search for "{{ search.terms }}" did not yield any results.</p>              
    {% else %}
    <div class='collection-grid'>
      <ul>
        {% for product in search.results %}
          <li class='col-xs-6 col-sm-6 col-md-4 col-lg-3'>
            {% include 'collection-grid-item' %}
          </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    {% endpaginate %}
    
  {% endif %}
