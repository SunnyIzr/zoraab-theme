{% layout settings.customer_layout %}

<div class='row'>    

<div class="account_form">
  <div class='background-image hidden-xs'>
    <img src="{{ 'login-slide.jpg' | asset_url }}" class='img-responsive'>
  </div>
  <div class='col-sm-4 col-sm-offset-8'>
  
	  <div id="login_reg">
			<div class="login_form_reg">
		  <!-- Create Customer -->
	  		<div id="create-customer">


			    {% form 'create_customer' %}
			      {{ form.errors | default_errors }}

			     <input type="text" value="" placeholder="First Name" name="customer[first_name]" id="first_name" class="logininput" size="30" />
			     <input type="text" value="" placeholder="Last Name" name="customer[last_name]" id="last_name" class="logininputreg" size="30" />
			     <input type="email" value="" placeholder="Email" name="customer[email]" id="email" class="logininputreg" size="30" />
			     <input type="password" value="" placeholder="Password" name="customer[password]" id="password" class="logininputpw" size="30" />
			     
			      <div style="margin-top:30px; text-align: center; color:#a6a3a3; width: 205px;">
			        <input class="newbutton" type="submit" value="Sign up" /><br/>
					<p><a href="/account/login"> Log in to your dashboard</a></p>

			      </div>
			    {% endform %}
	  		</div>
			</div>
		</div>
		
	</div>
</div>